<div class="top-bar">
  <h1>Contacts</h1>
</div>
<div class="table">
  <table class="listing" cellpadding="0" cellspacing="0">
    <tr>
      <th style="width:40px;">Num</th>
      <th>user</th>
      <th>title</th>
      <th>mail</th>
      <th>created_at</th>
      <th>tool</th>
    </tr>
    <% @contacts.each_with_index do |con, i| %>
    <tr>
      <td><%= i+1 %></td>
      <td><%= con.user.username %> </td>
      <td>
        <%= link_to (con.title), admin_contact_path(:id => con.id), :method => :get %>
      </td>
      <td><%= con.mail %></td>
      <td><%= con.created_at %></td>
      <td>
        <%= button_to "del",admin_contact_path(:id => con.id)  ,{:method => :delete} %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
