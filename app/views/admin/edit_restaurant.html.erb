<%= form_for(@restaurant, :url => {:action => "update_restaurant"}) do |f| %>
    <%= hidden_field_tag :id, params[:id] %>

    name: <%= f.text_field :resname %>
    phone: <%= f.text_field :phone %>
    info: <%= f.text_field :resinfo %>

<select name="restaurant[restype]">
    <option value="1">중식</option>
    <option value="2">도시락</option>
    <option value="3">치킨</option>
    <option value="4">피자</option>
    <option value="5">기타</option>

</select>

    <%= submit_tag %>
<% end %>
