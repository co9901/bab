<!DOCTYPE html>
<html>
    <head>
        <title>Bab</title>
            <%= yield :head %>
            <%= stylesheet_link_tag    "application" %>
            <%= javascript_include_tag "application" %>
            <%= csrf_meta_tags %>
    </head>
    <body>

        <div id="header">
            <div id="logobox">

            </div>

            <div id="searchbox">
                <form action ='/bab/search'>
                    <input name="query" type="text" class="searchtext" value="black dragon river" onfocus="this.value='';"/>
                    <input type="submit" value="search" class="searchbtn" />
                </form>
            </div>

            <div id="userbox">

            </div>

        </div>
        <div id ="blackbox">
            <p>Powered by devlee</p>
        </div>
        <div id ="content">

            <div id="left_content">
                 <div id="panelbox">
                    <ul class="panel_ul">
                        <li class="panel_li"><a href="">Home</a></li>
                        <li class="panel_li"><a href="">Search</a></li>
                        <li class="panel_li"><a href="">Select</a></li>
                    </ul>
                 </div>
                 <div id="left_item">
                    <%= yield :left %>
                 </div>
            </div>
            <div id="right_content">
                <div id="right_item">
                    <%= yield :right %>
                </div>
            </div>

        </div>

        <div id ="footer">

        </div>
    </body>
</html>
