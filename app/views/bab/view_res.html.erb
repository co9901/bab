

<div id="res_profile">
  <table>
    <tr>
      <td colspan="3" class="table_name">Restaurant Information</td>
    </tr>
    <tr>
      <td rowspan="4" class="table_image">
        <%= image_tag(@restaurant.avatar.url, {:class => "view_res_img"}) %>
      </td>
      <td class="table_row1">taste</td>
      <td id="taste_point">
        <div id="prog_taste">
          <p><%= ((@restaurant.tastepoint).round(1)/(@restaurant.count).round(1)).round(1) %></p>
        </div>
      </td>
    </tr>
    <tr>
      <td class="table_ev_list">speed</td>
      <td class="table_row1" id="speed_point">
        <div id="prog_speed">
          <p><%= ((@restaurant.speedpoint).round(1)/(@restaurant.count).round(1)).round(1) %></p>
        </div>
      </td>
    </tr>
    <tr>
      <td class="table_row1">amount</td>
      <td id="amount_point">
        <div id="prog_amount">
          <p><%= ((@restaurant.amountpoint).round(1)/(@restaurant.count).round(1)).round(1) %></p>
        </div>
      </td>
    </tr>
    <tr>
      <td>service</td>
      <td class="table_row1" id="service_point">
        <div id="prog_service">
          <p><%= ((@restaurant.servicepoint).round(1)/(@restaurant.count).round(1)).round(1) %></p>
        </div>
      </td>
    </tr>
    <tr>
      <td colspan="2" class="table_row1"><%= @restaurant.resname %></td>
      <td rowspan="2" id="view_res_info">
        <p><%= @menu_view_res.first.menuname %> - Best</p>
        <%= @restaurant.resinfo %>
      </td>
    </tr>
    <tr>
      <td colspan="2"><%= @restaurant.phone %></td>
    </tr>


  </table>




</div>


<div id="supplement_box">
  <div id="ev_link">
    <%= link_to_function("evaluate", "evRes(#{@restaurant.id})", :class => "view_res_link")  %>
  </div>
  <div id="menu_link">
    <%= link_to_function("menu", "viewMenu(#{@restaurant.id})", :class => "view_res_link")  %>
  </div>

</div>


<div id="review_box">
  <table>
    <tr>
      <td class="table_name2">
        New Comment
        <%= link_to_function("more","moreComment(#{@restaurant.id})") %>
      </td>
    </tr>
    <% @ev_temps.each_with_index do |ev, i| %>
      <% if ev.review.nil? %>
        <tr>
          <td id="review_td" class="table_row<%= i%2 %>"></td>
        </tr>
      <% else %>
        <tr>
          <td id="review_td" class="table_row<%= i%2 %>"><%= ev.review %></td>
        </tr>
      <% end %>
    <% end %>
  </table>

</div>

